<!-- 如果只是展示用户头像昵称，可以使用 <open-data /> 组件 -->
<view class='cont'>
  <open-data type="userAvatarUrl"></open-data>
  <open-data type="userNickName"></open-data>
  <!-- 需要使用 button 来授权登录 -->
  <button 
    class='btn'
    wx:if="{{canIUse}}"
    open-type="getUserInfo"
    bindgetuserinfo="bindGetUserInfo"
  >
    授权登录
  </button>
</view>
