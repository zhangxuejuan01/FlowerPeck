page{
  background: #f2f2f2;
}
.swiper-container{
  width: 100%;
  position: relative;  
}
.swiper_box {
  width: 100%;
  height:748rpx;
}
swiper-item image {
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height:748rpx;
}

.detail{
  width: 750rpx;
  padding: 20rpx;
  box-sizing: border-box;
  margin-top: 10rpx;
  background: #fff;
}
.price{
  color: red;
  font-size: 32rpx;
  font-weight: bold;
}
.detail-title{
  margin-top: 10rpx;
  width: 100%;
  display: flex;
  display: -webkit-flex;
}
.title-l{
  flex: 1;
  font-size: 28rpx;
  color: #333;
}
button::after{
border:none;
}
button{
border-radius: 0;
}
.title-r{
  margin-left: 20rpx;
  background-color: #fff;
  line-height: 60rpx;
}
.detail-miaoshu{
  font-size: 24rpx;
  line-height: 30rpx;
  color: #333;
}
.comment{
  margin-top: 15rpx;
  display: flex;
  display: -webkit-flex;
  color: #b3c5c4;
  font-size: 24rpx;
  font-weight: bold;
}
.buy-num{
  flex: 1;
}
.praise-num{
  flex: 1;
}
.introduce{
  width: 750rpx;
  margin-top: 20rpx;
  padding: 20rpx 20rpx 90rpx 20rpx;
  box-sizing: border-box;
  background: #fff;
}
.introduce-title{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #333;
}
.introduce-content{
  text-align: center;
}
.bottom{
  height: 80rpx;
  width: 750rpx;
  position: fixed;
  bottom: 0;
  z-index: 1;
  display: flex;
  display: -webkit-flex;
  text-align: center;
  box-shadow: 0 -2rpx 10px rgba(0, 0, 0, .2);
}
.contact{
  width: 120rpx;
  padding-top: 12rpx;
  box-sizing: border-box;
  height: 80rpx;
  display: flex;
  flex-flow: column;
  align-items: center;
  justify-content: center;
  line-height: 35rpx;
  background-color: #fff;
}
.collect{
  width: 120rpx;
  padding-top: 12rpx;
  box-sizing: border-box;
  height: 80rpx;
  display: flex;
  flex-flow: column;
  align-items: center;
  justify-content: center;
  line-height: 35rpx;
  background-color: #fff;
}
.contact text ,.collect text{
  display: block;
  font-size: 24rpx;
}
.shop-cart , .buy{
  flex: 1;
  line-height: 80rpx;
  background-color: #FF8C00;
  color: #fff;
  font-size: 30rpx;
}
.buy{
  background-color: #FF4500;
}
